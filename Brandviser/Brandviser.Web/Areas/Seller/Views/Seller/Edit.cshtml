@model Brandviser.Web.Areas.Seller.Models.EditDomainViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Update your domain details</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("EditDomain", "Seller", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>
                @Html.ValidationMessageFor(m => m.Name)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.Description)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Price, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @readonly = "readonly" })
                </div>
                @Html.ValidationMessageFor(m => m.Price)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.OwnerCustomPrice, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.OwnerCustomPrice, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.OwnerCustomPrice)
            </div>

                <div class="form-group">
                    <div class="col-sm-10 col-sm-offset-2">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </div>
        }
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/unobtrusive")