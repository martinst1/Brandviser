@model Brandviser.Web.Areas.Admin.Models.ApproveDomainNameViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Approve or reject @Model.Name</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("ApprovePendingDomain", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.Id)

            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.SellerName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.SellerName, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.SellerUsername, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.SellerUsername, new { @class = "form-control", @readonly = "readonly"  })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Price, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Action</label>
                <div class="col-sm-8">
                    <label class="radio-inline"> @Html.RadioButton("ApproveAction", "Approve", true) Approve </label>
                    <label class="radio-inline"> @Html.RadioButton("ApproveAction", "Reject") Reject </label>
                    
                    @*<label class="radio-inline"> <input type="radio" name="season" id="seasonSummer" value="approve" checked> Approve </label>
                    <label class="radio-inline"> <input type="radio" name="season" id="seasonWinter" value="reject"> Reject </label>*@
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <button type="submit" class="btn btn-success">Go</button>
                </div>
            </div>
        }
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/unobtrusive")
